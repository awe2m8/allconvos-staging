# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Public app URL used for auth/billing/onboarding links and Stripe redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional explicit marketing URL (defaults from app URL if omitted)
NEXT_PUBLIC_MARKETING_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_LITE=

# Optional: AI prompt generation for voice-builder (falls back if missing)
OPENAI_API_KEY=
OPENAI_REALTIME_MODEL=gpt-realtime
OPENAI_REALTIME_VOICE=alloy

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Twilio voice bridge websocket endpoint used by /api/twilio/voice/incoming
# Local example:
# VOICE_BRIDGE_WS_URL=ws://localhost:8081/twilio-media-stream
VOICE_BRIDGE_WS_URL=

# Twilio provisioning (search/buy/attach numbers)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Optional but recommended for countries that require regulatory address compliance (e.g. AU)
TWILIO_ADDRESS_SID=
# Optional: required for some regions/number types (e.g. AU mobile)
TWILIO_BUNDLE_SID=
